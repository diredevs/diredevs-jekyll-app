black = #252627
red = #da004d

body
  background black
  color #fff
  font-family Source Sans Pro
  font-weight 400

h1,h2,h3,h4,h5,h6
  font-family Source Sans Pro
  text-transform uppercase
  font-weight 600
  color #fff

a 
  color red
  text-decoration none

p 
  opacity 0.8
  font-weight 100

.wrap
  max-width 860px
  margin auto
  padding 0 20px

.button
  background red
  padding 0.5em 1em
  color #fff
  &:hover
    background darken(red, 10%)
    color #fff

.header
  line-height 100px
  padding 20px 0

.header__logo 
  height 100px
  width 235px
  margin auto
  background url(../img/diredev_logo.png) no-repeat center left
  background-size auto 100%
  h1
    margin 0 0 0 60px
    line-height 96px;
    color #fff
    font-weight 600


.header__nav
  text-align center
  ul
    margin 0
    padding 0
  li
    display inline
    margin-left 1em
    &:first-child
      margin-left 0
  a
    color #fff
    opacity 0.8
    padding-bottom 5px
    border-bottom 3px solid transparent;
    transition all 0.3s ease
    &:hover
      opacity 1
      border-color red

.footer
  margin 30px 0
  font-weight 100

.posts
  margin 0
  padding 0
  list-style none
  li 
    margin-bottom 60px

.post__intro
  font-style italic

bp(480px)
.header__logo
  float left
  text-align left
.header__nav
  text-align right 
endbp()